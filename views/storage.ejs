<%- include('./partials/header') -%>
<%- include('./partials/sidebar') -%>
<link rel="stylesheet" href="/storage/storage.css">

<div id="storage">
<div id="contain-s">
  <div class="alert alert-warning" role="alert" id="progress" style="text-align: center;margin: auto;"></div>
            <div id="row-file" class="row">
                <input name="uploadedFile" class="form-control" type="file" id="form-file" data-show-upload="true" data-show-caption="true" multiple>
                <input id="uploadNow" type="submit" value="UPLOAD">
               <h3 id="av_sp">
                <span>free space:</span> <%= currentUser.free_space.toFixed(2) %>/<%= currentUser.capacity %></h3>GB
              </div>
              
              <div id="div-table">
                <table style="" id="files-table" class="table">
                  <thead>
                    <tr>
                      <th><button id="del-multiple" class="btn btn-danger">Del</button></th>
                      <th scope="col">File name</th>
                      <th scope="col">Date</th>
                      <th scope="col">Size</th>
                      <th scope="col">Action</th>
                    </tr>
                  </thead>
                  <tbody>
                      <% for(var i=0;i<the_files.length;i++){ %>
                    <tr id="<%=the_files[i].name%>" name="<%=the_files[i].name%>">
                      <td style="">
                        <input style="" class="check-file" type="checkbox" id="check-<%=i%>" name="<%=the_files[i]._id%>" value="">
                      </td>
                      <td>
                        <a href="/download_file/<%=the_files[i]._id%>">
                          <%= the_files[i].name %>
                        </a>
                      </td>
                      <td><%= the_files[i].date.toUTCString() %></td>
                      <td><%= the_files[i].size.toFixed(4) %> GB</td>
                      <td><button onclick="pre_delete_file('<%=the_files[i]._id%>','<%=currentUser.username%>', '<%=the_files[i].name%>');" id="delete_f" class="btn btn-danger">Delete</button></td>
                    </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>


      <span id="username_sp" style="display: none;"><%=currentUser.username%></span>
      <span id="free_sp" style="display: none;"><%=currentUser.free_space%></span>
</div>
</div>


<script src="/storage/storage.js"></script>
